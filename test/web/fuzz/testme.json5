{
    enable: 'manual',
    compiler: {
        c: {
            gcc: {
                flags: [
                    '-g', '-O0',
                    '-Wall', '-Wextra', '-Wno-unused-parameter', '-Wno-unused-function',
                    '-Wno-unused-result', '-Wshorten-64-to-32', '-Wno-unknown-warning-option',
                    '-Wformat', '-Wformat-security', '-Wsign-compare', '-Wsign-conversion',
                    '-I../../build/${PLATFORM}-${PROFILE}/inc',
                    '-L../../build/${PLATFORM}-${PROFILE}/bin',
                    '-L.testme'
                ],
                linux: {
                    flags: ['-Wl,-rpath,$ORIGIN/${CONFIGDIR}/../../build/${PLATFORM}-${PROFILE}/bin'],
                },
                macosx: {
                    flags: ['-Wl,-rpath,@executable_path/${CONFIGDIR}/../../build/${PLATFORM}-${PROFILE}/bin'],
                },
                libraries: ['fuzz', 'web', 'url', 'websock', 'json', 'crypt', 'r', 'uctx', 'm', 'crypto', 'ssl'],
            },
            msvc: {
                flags: [
                    '-GR-', '-MDd', '-wd4100',
                    '/I../../build/${PLATFORM}-${PROFILE}/inc',
                    '/LIBPATH:../../build/${PLATFORM}-${PROFILE}/bin',
                    '/LIBPATH:.testme',
                    '/I${ME_COM_OPENSSL_PATH}/include',
                    '/LIBPATH:${ME_COM_OPENSSL_PATH}/lib/VC/x64/MDd',
                    '/I${USERPROFILE}/vcpkg/installed/x64-windows/include',
                    '/LIBPATH:${USERPROFILE}/vcpkg/installed/x64-windows/lib',
                ],
                libraries: ['libfuzz', 'libweb', 'liburl', 'libwebsock', 'libcrypt', 'libjson', 'libr', 'libuctx', 'libcrypto', 'libssl',
                'ws2_32.lib', 'advapi32.lib', 'user32.lib', 'kernel32.lib', 'oldnames.lib', 'shell32.lib'],
            },
        },
    },
    env: {
        default: {
            PATH: '../../build/${PLATFORM}-${PROFILE}/bin:${PATH}',
        },
        windows: {
            PATH: '../../build/${PLATFORM}-${PROFILE}/bin;C:/Program Files/OpenSSL;${USERPROFILE}/vcpkg/installed/x64-windows/bin;${PATH}',
        },
    },
    execution: {
        workers: 1,
    },
    services: {
        prep: './prep.sh',
        setup: './setup.sh',
        cleanup: './cleanup.sh',
    },
}
