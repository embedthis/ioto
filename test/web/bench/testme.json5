{
    /*
        Benchmark test configuration
        Comprehensive performance benchmarking for the web server
    */
    enable: 'manual',
    compiler: {
        c: {
            gcc: {
                flags: [
                    '-Wformat', '-Wformat-security', '-Wsign-compare', '-Wsign-conversion',
                    '-I../../build/${PLATFORM}-${PROFILE}/inc', '-L../../build/${PLATFORM}-${PROFILE}/bin'
                ],
                linux: {
                    flags: ['-Wl,-rpath,${CONFIGDIR}/../../build/${PLATFORM}-${PROFILE}/bin'],
                },
                macosx: {
                    flags: ['-Wl,-rpath,${CONFIGDIR}/../../build/${PLATFORM}-${PROFILE}/bin'],
                },
                libraries: ['web', 'url', 'websock', 'json', 'crypt', 'r', 'uctx', 'm', 'crypto', 'ssl'],
            },
            msvc: {
                flags: [
                    '-GR-', '-MDd', '-wd4100',
                    '/I../../build/${PLATFORM}-${PROFILE}/inc',
                    '/LIBPATH:../../build/${PLATFORM}-${PROFILE}/bin',
                    '/I${ME_COM_OPENSSL_PATH}/include',
                    '/LIBPATH:${ME_COM_OPENSSL_PATH}/lib/VC/x64/MDd',
                    '/I${USERPROFILE}/vcpkg/installed/x64-windows/include',
                    '/LIBPATH:${USERPROFILE}/vcpkg/installed/x64-windows/lib',
                ],
                libraries: ['libweb', 'liburl', 'libwebsock', 'libcrypt', 'libjson', 'libr', 'libuctx', 'libcrypto', 'libssl',
                'ws2_32.lib', 'advapi32.lib', 'user32.lib', 'kernel32.lib', 'oldnames.lib', 'shell32.lib'],
            },
        },
    },
    environment: {
        default: {
            PATH: '../../build/${PLATFORM}-${PROFILE}/bin:${PATH}',
        },
        windows: {
            PATH: '../../build/${PLATFORM}-${PROFILE}/bin;C:/Program Files/OpenSSL;${USERPROFILE}/vcpkg/installed/x64-windows/bin;${PATH}',
        },
    },
    execution: {
        timeout: 1800,  // 30 minutes for comprehensive benchmarks
    },
    services: {
        prep: './prep.sh',
        setup: './setup.sh',
        cleanup: './cleanup.sh',
        healthcheck: { url: 'http://localhost:4260/index.html' },
    },
}
